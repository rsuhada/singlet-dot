" https://github.com/rsuhada/singlet-dot/blob/master/.vromerc

" ====================================================================
"
" basic settings
"
" ====================================================================

" quicker movement
map  n 5j
map  e 5k
map  N <C-f>
map  E <C-b>
map dv G

" open link in new tab
map v F

" open link in this tab
map t f

" search for selection/clipboard content in net tab
map p P

" other hintkeys
" set hintkeys=1234567890
" set hintkeys=ASDFGHJKL:
" set hintkeys=ASDFG

" Easier on/off vrome
map - <C-z>
map = <C-z>

" solve Mac conflict
unmap <M-f>

" ====================================================================
"
" left hand controls
"
" ====================================================================

map a 5j
map r 5k

" reload
map ; r

" forward backward page
map z H
map x L

" tab motion made simple
map w gt
map q gT
map <F9> <C-^>
map f <C-^>

" need to redefine zoom
map ci zi
map co zo
map cc zz
map cC zZ

" map <F2> gom

" ====================================================================
"
" whitelist
"
" ====================================================================

set disablesites=class.coursera.org, mail.google.com, www.eyercize.com/practice/bm_read/, www.typingweb.com, 10fastfingers.com, cloud.feedly.com, www.kongregate.com, www.sense-lang.org/trial/typing/


" ====================================================================
"
" search engines
"
" ====================================================================

" set searchengines={"gl":"http://www.google.com/search?q={{keyword}}"}
" set searchengines+={";":"http://www.google.com/search?q={{keyword}}"}
" set searchengines+={"w":"http://en.wikipedia.org/wiki/{{keyword}}"}

" Change default search engine, default is google.
" set defaultsearch=gl
