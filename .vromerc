" https://github.com/rsuhada/singlet-dot/blob/master/.vromerc

" ====================================================================
"
" basic settings
"
" ====================================================================

" quicker movement
map  j 5j
map  k 5k
map  J <C-f>
map  K <C-b>
map gv G

" open link in new tab
map v F

" search for selection/clipboard content in net tab
map p P

" solve Mac conflict
unmap <M-f>

" other hintkeys
set hintkeys=1234567890
" set hintkeys=asdfghjkl;
" set hintkeys=ASDFGHJKL:
" set hintkeys=ASDFG

" Easier on/off vrome
map - <C-z>
map = <C-z>


" ====================================================================
"
" blacklist
"
" ====================================================================

set disablesites=reader.google.com, google.com/reader, class.coursera.org, mail.google.com, http://www.feedly.com, http://cloud.feedly.com/, http://cloud.feedly.com/\#latest


" ====================================================================
"
" search engines
"
" ====================================================================

" set searchengines={"gl":"http://www.google.com/search?q={{keyword}}"}
" set searchengines+={";":"http://www.google.com/search?q={{keyword}}"}
" set searchengines+={"w":"http://en.wikipedia.org/wiki/{{keyword}}"}

" Change default search engine, default is google.
" set defaultsearch=gl


" ====================================================================
"
" left hand controls
"
" ====================================================================

map a 5j
map s 5k

" forward backward page
map z H
map x L

" tab motion made simple
map w gt
map q gT
map <F9> <C-^>

" need to redefine zoom
map ci zi
map co zo
map cc zz
map cC zZ

map <F2> gom
